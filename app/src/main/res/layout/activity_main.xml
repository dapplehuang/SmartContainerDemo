<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drc.smartcontainerdemo.MainActivity">

    <Button
        android:id="@+id/add_btn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/add_item_to_stock"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/remove_btn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/remove_item_to_stock"
        app:layout_constraintTop_toBottomOf="@+id/add_btn"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/list_btn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/list_item_to_stock"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/remove_btn" />
</android.support.constraint.ConstraintLayout>
