<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drc.smartcontainerdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListStockActivity"
            android:label="@string/list_item_to_stock" />
        <activity
            android:name=".AddItemActivity"
            android:label="@string/add_item_to_stock" />
        <activity
            android:name=".RemoveItemActivity"
            android:label="@string/remove_item_to_stock" />
    </application>

</manifest>